<Window x:Class="TinyClips.Windows.Views.RegionSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#40000000"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Cursor="Cross">
    <Canvas Name="RootCanvas">
        <Rectangle Name="SelectionRect"
                   Stroke="#FF4FC3F7"
                   Fill="#304FC3F7"
                   StrokeThickness="2"
                   Visibility="Collapsed" />
    </Canvas>
</Window>
